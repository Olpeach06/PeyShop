@model PeyShop.Models.User

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0">Регистрация</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Фамилия</label>
                            <input asp-for="LastName" class="form-control form-control-lg" autofocus/>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">Имя</label>
                            <input asp-for="FirstName" class="form-control form-control-lg"/>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Patronymic" class="form-label fw-bold">Отчество</label>
                            <input asp-for="Patronymic" class="form-control form-control-lg"/>
                            <span asp-validation-for="Patronymic" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">Пароль</label>
                            <input asp-for="Password" class="form-control form-control-lg" type="password"/>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Адрес электронной почты</label>
                            <input asp-for="Email" class="form-control form-control-lg"/>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-user-plus me-2"></i> Зарегистрироваться
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Font Awesome icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>

<!-- Additional custom styles -->
<style>
    body {
        background-color: #fafafa;
    }

    .card {
        background-color: #fff;
        margin-top: 2em;
        border-radius: 15px !important;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    input.form-control,
    select.form-control {
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #ced4da;
        transition: all 0.3s;
    }

    input.form-control:focus,
    select.form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    button.btn {
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: 500;
        transition: all 0.3s;
    }

    button.btn-primary {
        background-color: #4e9f3d;
        border-color: #4e9f3d;
    }

    button.btn-primary:hover {
        background-color: #3e7d34;
        border-color: #3e7d34;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}