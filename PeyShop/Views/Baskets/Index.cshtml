@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@model IEnumerable<PeyShop.Models.Basket>

@{
    ViewData["Title"] = "Корзина";
}

<h1>Ваша корзина</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Товар</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Сумма</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (item.Product != null)
                    {
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
                    }
                    else
                    {
                        <td colspan="4">Товар недоступен</td>
                    }
                    <td>
                        <form asp-action="RemoveFromBasket" method="post">
                            <input type="hidden" name="id" value="@item.BasketId" />
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </form>
                        <form asp-action="UpdateQuantity" method="post">
                            <input type="hidden" name="id" value="@item.BasketId" />
                            @* <input type="number" name="quantity" value="@item.Quantity" min="1" max="@item.Product.Quantity" /> *@
                            @* <button type="submit" class="btn btn-sm btn-info">Обновить</button> *@
                        </form>
                    </td>
                </tr>
            }
            
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Итого:</strong></td>
                <td><strong>@Model.Sum(i => i.Product.Price * i.Quantity).ToString("C"))</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Продолжить покупки</a>
    <form asp-action="Checkout" method="post">
        <button type="submit" class="btn btn-primary">Оформить заказ</button>
    </form>
}
else
{
    <div class="alert alert-info">
        Ваша корзина пуста
    </div>
    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Начать покупки</a>
}