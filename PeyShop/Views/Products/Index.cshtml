@model IEnumerable<PeyShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Каталог товаров</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            
             <th>
             @Html.DisplayNameFor(model => model.First().CategoryId) <!-- Измените на CategoryId -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TypeOfPrTypeId) <!-- Измените на TypeOfPrTypeId -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FirmId) <!-- Измените на FirmId -->
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfPr.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firm.Name)
            </td>
            
            <td>
                <img src="@Url.Content("~/images-jpg/" + item.Image)" style="width:100px; height:auto;" />
            </td>
                <td>
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary">Редактировать</a>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-secondary">Детали</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">Удалить</a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Baskets" asp-action="AddToBasket" method="post">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="number" name="quantity" value="1" min="1" max="@item.Quantity" style="width: 50px;" />
                                <button type="submit" class="btn btn-primary">В корзину</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Войдите, чтобы добавить в корзину</a>
                        }
                    </div>
                </td>
        </tr>

}
    </tbody>
</table>
