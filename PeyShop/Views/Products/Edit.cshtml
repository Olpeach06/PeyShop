@model PeyShop.Models.Product

@{
    ViewData["Title"] = "Редактирование товара";
}

<!-- Hero Section -->
<div class="edit-hero mb-5" style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images-jpg/pets.jpg') no-repeat center center; background-size: cover; height: 200px; display: flex; align-items: center; color: white;">
    <div class="container">
        <h1 class="display-5" style="font-weight: 700; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">Редактирование товара</h1>
        <p class="lead" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">Внесите необходимые изменения</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0" style="font-weight: 600;">
                        <i class="fas fa-edit text-primary me-2"></i>Основная информация
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="ProductId" />

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label fw-bold">Название товара</label>
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Введите название" required />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label fw-bold">Цена</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">₽</span>
                                        <input asp-for="Price" class="form-control" placeholder="0.00" required />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label fw-bold">Количество</label>
                                    <input asp-for="Quantity" class="form-control" placeholder="Введите количество" required />
                                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Image" class="form-label fw-bold">Изображение</label>
                                    <input asp-for="Image" class="form-control" placeholder="Название файла изображения" />
                                    <span asp-validation-for="Image" class="text-danger small"></span>
                                    <small class="text-muted">Пример: product-image.jpg</small>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label fw-bold">Категория</label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId" required>
                                        <option value="">Выберите категорию</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TypeOfPrTypeId" class="form-label fw-bold">Тип продукта</label>
                                    <select asp-for="TypeOfPrTypeId" class="form-select" asp-items="ViewBag.TypeOfPrTypeId" required>
                                        <option value="">Выберите тип</option>
                                    </select>
                                    <span asp-validation-for="TypeOfPrTypeId" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FirmId" class="form-label fw-bold">Производитель</label>
                                    <select asp-for="FirmId" class="form-select" asp-items="ViewBag.FirmId" required>
                                        <option value="">Выберите производителя</option>
                                    </select>
                                    <span asp-validation-for="FirmId" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label fw-bold">Описание</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Подробное описание товара"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Preview Image -->
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="mb-4 text-center">
                                <h6 class="fw-bold mb-3">Текущее изображение</h6>
                                <img src="@Url.Content("~/images-jpg/" + Model.Image)" class="img-thumbnail" style="max-height: 200px;" alt="Текущее изображение товара">
                            </div>
                        }

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Назад к списку
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Сохранить изменения
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    .form-control, .form-select {
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #ced4da;
        transition: all 0.3s;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    .card {
        transition: all 0.3s ease;
        border: none;
    }
    
    .card-header {
        border-bottom: 1px solid rgba(0,0,0,0.1);
    }
    
    .btn {
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: 500;
        transition: all 0.3s;
    }
    
    .btn-primary {
        background-color: #4e9f3d;
        border-color: #4e9f3d;
    }
    
    .btn-primary:hover {
        background-color: #3e7d34;
        border-color: #3e7d34;
    }
</style>

<!-- Add Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Add Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Client-side validation enhancement
        (function () {
            'use strict'
            
            var forms = document.querySelectorAll('.needs-validation')
            
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}